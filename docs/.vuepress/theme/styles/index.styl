// .vuepress/style.styl, your extra styles.
.point,
.point-half
  width: 32%
  display: inline-block
  vertical-align: top
  box-sizing: border-box
  padding: 0 2em
  text-align: center
  h3
    color: lighten($landoPink, 18%)
    font-family: "Poppins", "Helvetica Neue", Arial, sans-serif
    font-size: 1.7em
    padding: .66em 0.24em 0
    margin: 0
    letter-spacing: -2px
  p
    font-family: "Source Sans Pro", "Helvetica Neue", Arial, sans-serif
    font-size: 1.1em
    word-spacing: 0.05em
    line-height: 1.5
.point-half
  width: 48%
  text-align: left
  padding-left: 0
@media (max-width: $MQMobile)
  .point
    margin: 0 auto
    width: 80%
    padding: 0
